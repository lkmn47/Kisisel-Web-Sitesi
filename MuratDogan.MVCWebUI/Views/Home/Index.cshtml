@{
    ViewBag.Title = "Home Page";
    Layout = "";
}
@model IEnumerable<MuratDogan.Model.Kisi>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="description" content="">
    <meta name="author" content="themesit.com">

    <link rel="icon" href="~/Content/img/favicon.ico">
    <title>Murat DOĞAN</title>
    <!-- ICON FONTS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/lightgallery.min.css" rel="stylesheet" />
    <link href="~/Content/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/pe-icon-7-combo.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <!-- MAIN STYLE FOR THIS TEMPLATE -->
    <!-- FONTS -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500">
</head>
<body class="layout-1 index-image">
    <!-- PRELOADER -->
    <div class="loader-wrapper">
        <div class="loader"></div>
    </div>
    <!-- /END PRELOADER -->
    <!-- INTRO -->
    <div class="intro">
        <div class="intro-inner intro-inner-left">
            <!-- BACKGROUND IMAGE -->        
            <div class="main-bg bg-image overlay" data-image="../Content/img/Anasayfa/6.jpg"   ></div>
        </div>
        <div class="intro-inner intro-inner-right">
            <div class="intro-content">
                <!-- YOUR AVATAR -->      
                <img src="~/Content/img/Avatar/@Model.FirstOrDefault().FotoUrl" class="avatar" alt="avatar">
                <!-- YOUR DESCRIPTION -->
                <h1>@(Model.FirstOrDefault().Ad + " " + Model.FirstOrDefault().SoyAd ) </h1>
                <p class="desc"><span class="typed">Web Designer</span></p>
                <!-- TYPED STRINGS -->
                <div class="typed-strings">
                    <p>Web Developer</p>
                    <p>Software Developer</p>
                    <p>Computer Engineer</p>
                </div>
                <p>
                    <button class="btn btn-glossy inverse goto-right"><span>About me</span></button>
                </p>
            </div>
        </div>
    </div>
    <!-- /END INTRO -->
    <!-- MAIN -->
    <div class="main main-right">
        <div class="container-fluid">
            <!-- ABOUT -->
            <div id="about" class="section-block">
                <h3 class="title">Hakkımda</h3>
                <p>İstanbul Kültür Üniversitesinde Bilgisayar Mühendisliği.
 Aynı zamanda Bilge Adam ve İŞKUR'un Düzenlediği NBUY(Nitelikli Bilişim Uzmanı Yetiştirme) mezunuyum. Alanımda kisisel bloglar, E-Ticaret ve forum siteleri en büyük yardımcım diyebilirim. Yazılım geliştirmeye
ve yeni teknolojiler hayatım boyunca hep ilgimi çekmişti. </p>
                <p><a download href="~/Content/img/CVs/@Model.FirstOrDefault().CV.CvAdı"><strong>CV mi İndirmek İçin Tıklayınız</strong></a></p>
            </div>
            <div id="about" class="section-block">
                <h3 class="title">Kariyer Hedefi</h3>
                <p>@Model.FirstOrDefault().KariyerHedefi.Icerik</p>
            </div>
            <div id="experience" class="section-block">
                <h3 class="title">Deneyim</h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo.</p>
                <div class="timeline exp-timeline text-xs-center text-sm-left">

                    @foreach (var item in Model.FirstOrDefault().Tecrubeler)
                    {
                        <div class="timeline-item">
                            <div class="timeline-image">
                                <img src="~/Content/img/01.jpg" alt="">
                            </div>                         
                            <div class="timeline-content">
                                <span class="time">@item.BaslamaTarihi.Year - @item.CikisTarihi.Year</span>
                                <h4>@item.Pozisyon</h4>
                                <h5>@item.FirmaAdi</h5>
                                <p>@item.Icerik</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- /END EXPERIENCE -->
            <!-- SKILLS -->
            <div id="skills" class="section-block">
                <h3 class="title">My Skills</h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.</p>
                <div class="progress-bars p-t-30">
                    @foreach (var item in Model.FirstOrDefault().Yetenekler)
                    {
                        <div class="progress-info">@item.YetenekAdi</div>
                        <div class="progress">
                            <div class="progress-bar anim" data-percent="@item.Seviyesi">
                                <span class="value">@item.Seviyesi%</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- /END SKILLS -->
            <!-- EDUCATION -->
            <div id="education" class="section-block">
                <h3 class="title">Education</h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo.</p>
                <div class="timeline edu-timeline">
                    @foreach (var item in Model.FirstOrDefault().EgitimBilgileri)
                    {
                        <div class="timeline-item">
                            <div class="col-sm-3">
                                <span class="time"><b>@item.BaslamaTarihi.Year-@item.TamamlamaTarihi.Year</b></span>
                            </div>
                            <div class="col-sm-6">
                                <span class="institute">@item.Kurum</span>
                            </div>
                            <div class="col-sm-3">
                                <span class="degree">@item.Pozisyon</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- /END EDUCATION -->
            <!-- PORTFOLIO -->
            <div id="portfolio" class="section-block">
                <h3 class="title">Portfolio</h3>
                <!-- WORKS FILTER -->
                <div class="works-filter-wrap">
                    <ul class="works-filter clearfix font2">
                        <li><a id="all" href="#" data-filter="*" class="active"><span>All</span></a></li>
                        <li><a href="#" data-filter=".branding"><span>Branding</span></a></li>
                        <li><a href="#" data-filter=".graphics"><span>Graphics</span></a></li>
                        <li><a href="#" data-filter=".logos"><span>Logos</span></a></li>
                        <li class="hidden-xs"><a href="#" data-filter=".ui"><span>UI</span></a></li>
                        <li class="hidden-xs"><a href="#" data-filter=".web"><span>Web</span></a></li>
                    </ul>
                </div>
                <!-- /END WORKS FILTER -->
                <div id="works-container" class="works-container clearfix">
                    <!-- WORKS ITEM -->
                    <div class="works-item ui web" data-src="img/works/01_full.jpg">
                        <img src="img/works/01_thumb.jpg" data-no-retina alt="" />
                        <div class="works-item-inner">
                            <h4>Print Design</h4>
                            <h5>Branding</h5>
                        </div>
                    </div>
                    <!-- /END WORKS ITEM -->
                    <!-- WORKS ITEM -->
                    <div class="works-item web logos" data-src="http://www.youtube.com/watch?v=Pq9yPrLWMyU" data-poster="img/works/02_full.jpg">
                        <img src="img/works/02_thumb.jpg" data-no-retina alt="" />
                        <div class="works-item-inner">
                            <h4>Graphic Design</h4>
                            <h5>Branding</h5>
                        </div>
                    </div>
                    <!-- /END WORKS ITEM -->
                    <!-- WORKS ITEM -->
                    <div class="works-item logos graphics" data-src="img/works/03_full.jpg">
                        <img src="img/works/03_thumb.jpg" data-no-retina alt="" />
                        <div class="works-item-inner">
                            <h4>Logo Design</h4>
                            <h5>Branding</h5>
                        </div>
                    </div>
                    <!-- /END WORKS ITEM -->
                    <!-- WORKS ITEM -->
                    <div class="works-item branding ui" data-src="http://vimeo.com/1084537" data-poster="img/works/04_full.jpg">
                        <img src="img/works/04_thumb.jpg" data-no-retina alt="" />
                        <div class="works-item-inner">
                            <h4>UI Design</h4>
                            <h5>Branding</h5>
                        </div>
                    </div>
                    <!-- /END WORKS ITEM -->
                    <!-- WORKS ITEM -->
                    <div class="works-item branding graphics" data-src="img/works/05_full.jpg">
                        <img src="img/works/05_thumb.jpg" data-no-retina alt="" />
                        <div class="works-item-inner">
                            <h4>UX Design</h4>
                            <h5>Branding</h5>
                        </div>
                    </div>
                    <!-- /END WORKS ITEM -->
                    <!-- WORKS ITEM -->
                    <div class="works-item web branding" data-iframe="true" id="open-website" data-src="http://www.w3schools.com/">
                        <img src="img/works/06_thumb.jpg" data-no-retina alt="" />
                        <div class="works-item-inner">
                            <h4>Web Design</h4>
                            <h5>Branding</h5>
                        </div>
                    </div>
                    <!-- /END WORKS ITEM -->
                </div>
            </div>
            <!-- /END PORTFOLIO -->
            <!-- SERVICES -->
            <div id="services" class="section-block">
                <h3 class="title">Projeler</h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo.</p>
                <div class="row p-t-30 text-xs-center text-sm-left">
                    <div class="timeline edu-timeline">
                        @foreach (var item in Model.FirstOrDefault().Projeler)
                        {
                            <div class="icon-bar col-md-12 timeline-item">
                                <div class="icon-bar">
                                    <i class="pe pe-paint-bucket"></i>
                                </div>
                                <div class="icon-box-content">
                                    <h4>@item.ProjeAdi</h4>
                                    <p>@item.ProjeIcerik</p>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
            <!-- /END SERVICES -->
            <!-- CONTACT -->
            <div id="contact" class="section-block p-b-100">
                <h3 class="title">Get in Touch</h3>
                <!-- CONTACT FORM -->
                <form class="contact-form row" method="post" action="@Url.Action("MailPost","Home")">
                    <p class="send-status success"><i class="icon pe-check"></i>Your message has been sent successfully.</p>
                    <p class="send-status error"><i class="icon pe-close-circle"></i>E-mail must be valid and message must be longer than 1 character.</p>
                    <div class="form-group col-sm-6">
                        <input type="text" class="form-control" id="name" name="name" placeholder="name">
                        <label for="name">Name*</label>
                    </div>
                    <div class="form-group col-sm-6">
                        <input type="email" class="form-control" id="email" name="email" placeholder="email">
                        <label for="email">Email*</label>
                    </div>
                    <div class="form-group col-xs-12">
                        <textarea class="form-control" id="message" name="message" rows="6" placeholder="message"></textarea>
                        <label for="message">Message"</label>
                    </div>
                    <div class="col-xs-12">
                        <button class="btn btn-glossy inverse m-t-40" type="submit" id="submit" name="submit" formaction="@Url.Action("Mailpost","Home")"><span>Send Message</span></button>
                    </div>
                </form>
                <!-- CONTACT INFO -->
                <div class="row">
                    <div class="contact-info">
                        <div class="col-sm-4 p-b-20">
                            <span>Visit</span>
                            <p>@Model.FirstOrDefault().IletisimBilgileri.FirstOrDefault().Adress</p>
                        </div>
                        <div class="col-sm-4 p-b-20">
                            <span>Reach</span>
                            <p><a href="" target="_blank">@Model.FirstOrDefault().IletisimBilgileri.FirstOrDefault().EMail</a></p>
                        </div>
                        <div class="col-sm-4 p-b-20">
                            <span>Call</span>
                            <p><a href="callto:954788315970" target="_blank">@Model.FirstOrDefault().IletisimBilgileri.FirstOrDefault().Telelfon</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /END CONTACT -->
        </div>
    </div>
    <!-- /END MAIN -->
    <!-- JAVASCRIPTS -->
    <script src="~/Scripts/vendor/plugins.js"></script>
    <script src="~/Scripts/main.js"></script>
</body>
</html>
