@model IEnumerable<MuratDogan.Model.CV>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CvAdı)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CvYolu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AktifMi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CvAdı)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CvYolu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AktifMi)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
